<%- include('../layouts/header') %>
<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h2 class="h2">Blast Message</h2>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <button
        type="button"
        class="btn btn-sm btn-outline-dark btn-outline-secondary"
      >
        + New
      </button>
      <button
        type="button"
        class="btn btn-sm btn-outline-dark btn-outline-secondary"
      >
        Export
      </button>
    </div>
    <button
      type="button"
      class="btn btn-sm btn-outline-dark btn-outline-secondary dropdown-toggle"
    >
      <span data-feather="calendar" class="align-text-bottom"></span>
      This week
    </button>
  </div>
</div>

<div>
  <div class="d-flex justify-content-between mb-3">
    <div class="btn-group">
      <button class="btn btn-sm btn-danger">delete</button>
      <button class="btn btn-sm btn-warning">resend</button>
    </div>
    <div class="">
      <div class="input-group">
        <input
          type="text"
          class="form-control form-control-sm border-secondary"
          placeholder="Search"
        />
        <button class="btn btn-sm btn-outline-secondary" type="button">
          <span data-feather="search"></span>
        </button>
      </div>
    </div>
  </div>

  <!-- Per pesan -->
  <div class="row rounded border shadow-sm mx-1 mb-4">
    <% for(let i = 1; i <= 2; i++) { %>
    <div
      class="col-12 col-lg-6 py-1 bg-light border-bottom border-1 shadow-sm mb-1 position-sticky <%= i%2 == 0 ? 'd-none d-lg-block rounded-end' : 'rounded-start' %>"
      style="font-weight: 500; top: 48px"
    >
      <div class="row">
        <div class="col-6">Target</div>
        <div class="col-3">Report</div>
        <div class="col-3 text-end pe-4">Action</div>
      </div>
    </div>
    <% } %> <% for(let i = 1; i <= 20; i++) { %>
    <div
      class="col-12 col-lg-6 border-bottom <%= i%2 == 0 ? 'border-start' : '' %>"
    >
      <div class="row">
        <div class="col-6">
          <div class="d-flex justify-content-between align-items-center">
            <div class="">
              <label class="p-2 mt-1">
                <input
                  type="checkbox"
                  data-check-all="check-msg"
                  class="my-auto form-check form-check-input"
                />
              </label>
            </div>
            <div class="d-flex flex-column">
              <strong class="text-dark">
                <%= i%2 == 0 ? 'Name From Contact' : '085326257129' %>
              </strong>
              <small
                style="max-width: 200px"
                class="text-muted text-truncate"
                data-bs-toggle="tooltip"
                data-bs-placement="right"
                title="Selamat Pagi Ibu Ariana kami ada Lorem ipsum dolor sit, amet consectetur adipisicing elit. Vitae, optio incidunt. Officiis ratione et unde dicta nulla est enim quod nemo possimus quisquam ex rem quam dignissimos, perspiciatis dolorem illum numquam suscipit voluptatem doloribus incidunt libero quas repellendus ipsam accusamus?"
              >
                Selamat Pagi Ibu Ariana kami ipsum dolor sit, amet consectetur
                adipisicing elit. Vitae, optio incidunt. Officiis
              </small>
            </div>
          </div>
        </div>
        <div class="col-4">
          <div>
            <span class="badge bg-success rounded-pill">success</span>
          </div>
          <div class="text-muted">
            <small class="text-truncate">
              <span data-feather="clock"></span>
              <%= i%2 == 0 ? '12:00' : '12:30' %> 12-12-2020
            </small>
          </div>
        </div>
        <div class="col-2">
          <button type="button" class="btn btn-sm btn-secondary mt-2">
            Detail
          </button>
        </div>
      </div>
    </div>
    <% } %>
  </div>

  <!-- per prosess -->
  <div class="mb-4">
    <div class="rounded-2 shadow-sm border">
      <table class="table mb-0 table-hover">
        <thead class="table-light">
          <tr>
            <th style="width: 10px">
              <input type="checkbox" data-check-all="check-msg" />
            </th>
            <th>Blast Process</th>
            <th>Report</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 1; i < 10; i++) { %>
          <tr>
            <th class="p-0">
              <label class="p-2 mt-1">
                <input
                  type="checkbox"
                  data-check-all="check-msg"
                  class="my-auto form-check form-check-input"
                />
              </label>
            </th>
            <td>
              <div class="d-flex flex-column">
                <strong class="text-dark">
                  Promotion T-Shirt Navy Blue - Erigo Original - Size M
                </strong>
                <small
                  style="max-width: 200px"
                  class="text-muted text-truncate"
                  data-bs-toggle="tooltip"
                  data-bs-placement="right"
                  title="Selamat [waktu] [sapaan] [nama] kami ada Lorem dari toko dolor sit, amet consectetur adipisicing elit. Vitae, optio incidunt. Officiis ratione et unde dicta nulla est enim quod nemo possimus quisquam ex rem quam dignissimos, perspiciatis dolorem illum numquam suscipit voluptatem doloribus incidunt libero quas repellendus ipsam accusamus?"
                >
                  Selamat Pagi Ibu Ariana kami ipsum dolor sit, amet consectetur
                  adipisicing elit. Vitae, optio incidunt. Officiis
                </small>
              </div>
            </td>
            <td>
              <div class="d-flex rounded overflow-hidden">
                <div class="d-flex flex-column">
                  <div class="py-1 px-2 bg-primary text-bg-primary">
                    Process: 2983
                  </div>
                  <small class="py-1 px-2 bg-success text-bg-success">
                    Sent: 3227
                  </small>
                </div>
                <div class="d-flex flex-column">
                  <small class="py-1 px-2 bg-warning text-bg-warning">
                    Not Regist: 193
                  </small>
                  <small class="py-1 px-2 bg-danger text-bg-danger">
                    Failed: 193
                  </small>
                </div>
              </div>
            </td>
            <td>
              <div>
                <span class="badge bg-success rounded-pill">success</span>
              </div>
              <div class="text-muted">
                <small>
                  <span data-feather="clock"></span>
                  <%= i%2 == 0 ? '12:00' : '12:30' %> 12-12-2020
                </small>
              </div>
            </td>
            <td>
              <button type="button" class="btn btn-sm btn-secondary">
                Detail
              </button>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('../layouts/footer') %>
